<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="Dark.Grey" Color="#2c2e32"/>
    <SolidColorBrush x:Key="Light.Grey" Color="#D4D4D4"/>
    <SolidColorBrush x:Key="Light.Red" Color="#eb525f"/>
    <SolidColorBrush x:Key="Light.Green" Color="#12aa92"/>
    <SolidColorBrush x:Key="Color.White" Color="White"/>
    <SolidColorBrush x:Key="Color.SoftGreen" Color="#7EB693"/>
    <LinearGradientBrush x:Name="GradientRed" x:Key="Color.Gradient.Red" StartPoint="0.4,1" EndPoint="1,0">
        <GradientStop Color="#eb525f" Offset="0"/>
        <GradientStop Color="White" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Color.Gradient.Green" StartPoint="0.2,1" EndPoint="1,0">
        <GradientStop Color="#12aa92" Offset="0"/>
        <GradientStop Color="#96ec87" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Color.Gradient.UA" StartPoint="0,8" EndPoint="1,0">
        <GradientStop Color="Yellow" Offset="0"/>
        <GradientStop Color="wHITE" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Color.Gradient.Blue" StartPoint="0.5,0.5" EndPoint="1,0.5">
        <GradientStop Color="wHITE" Offset="0"/>
        <GradientStop Color="black" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>